[Unit]
Description=git.hoi.io service
After=config.service

[Service]
User=core
Restart=always
ExecStartPre=-/usr/bin/docker kill git-%i
ExecStartPre=-/usr/bin/docker rm git-%i
ExecStartPre=-/usr/bin/docker pull quay.io/hoist/git-receiver:docker
ExecStart=/usr/bin/docker run --name git-%i  -e "SERVICE_TAGS=http,nodejs,git,production,https-hoi-io" -e "SERVICE_NAME=git" -e "NODE_ENV=production" --volumes-from config -P quay.io/hoist/git-receiver:docker
ExecStop=/usr/bin/docker stop git-%i
TimeoutStartSec=30m

[X-Fleet]
Conflicts=git@*.service
MachineMetadata=container_type=web
