{
  "Hoist": {
    "application": {
      "name": "hoist-git-listener"
    },
    "debug": true,
    "server": {
      "host": "0.0.0.0",
      "port": 8000
    },
    "filePaths": {
      "repositories": "/var/repositories",
      "tmp": "/tmp",
      "deploys": "/var/deploys"
    },
    "mongo": {
      "core": {
        "connectionString": "mongodb://localhost/hoist-default"
      }
    },
    "security": {
      "passwordStrength": 5
    }
  }
}
