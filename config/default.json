{
  "Hoist": {
    "application": {
      "name": "git.hoi.io"
    },
    "rabbit": {
      "url": "amqp://rabbitmq",
      "managementurl": "http://guest:guest@rabbitmq:15672/"
    },
    "debug": true,
    "server": {
      "host": "0.0.0.0",
      "port": 8000
    },
    "publisher": {
      "heartbeat": 60,
      "timeout": 120000
    },
    "filePaths": {
      "repositories": "/shares/repos",
      "deploys": "/shares/deploys"
    },
    "mongo": {
      "core": {
        "connectionString": "mongodb://db/hoist-default"
      }
    },
    "security": {
      "passwordStrength": 5
    },
    "log": {
      "hub": true
    }
  }
}
